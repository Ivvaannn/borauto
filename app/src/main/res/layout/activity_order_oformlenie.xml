<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="OrderPerehodBtn"
    tools:context=".OrderOformlenie">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OrdersPodrobno">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="93dp"
                        android:layout_height="41dp"
                        android:onClick="ClickBackBtn"
                        android:text="Назад" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="356dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="fill_horizontal"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/idOrdered"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="false"
                        android:hint="Идентификатор заказа"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/nameCarordered"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="false"
                        android:hint="название машины"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/idCarOrdered"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="false"
                        android:hint="идентификатор машины"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/idUserOrdered"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="false"
                        android:hint="идентификатор пользователя"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/dateOrdered"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="false"
                        android:hint="дата заказа"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/priceOrdered"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="false"
                        android:hint="цена заказа"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/addressOrdered"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Введите адресс доставки"
                        android:inputType="textPersonName" />

                    <Button
                        android:id="@+id/button16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="ClickAddressBtn"
                        android:text="Использовать место регистрации" />

                </LinearLayout>

                <Button
                    android:id="@+id/button11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:onClick="ClickRedactorCar"
                    android:text="Забронировать авто" />

                <Button
                    android:id="@+id/button17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="PerehodOrderBtn"
                    android:text="Перейти в корзину"
                    android:visibility="gone" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>